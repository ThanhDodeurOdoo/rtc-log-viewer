<templates>
    <t t-name="ViewControls">
        <div class="view-controls">
            <h3>View Options</h3>
            <div class="view-buttons">
                <button t-foreach="this.viewOptions" t-as="option" t-key="option.id" t-attf-class="view-btn {{ this.props.activeView() === option.id ? 'active' : '' }}" t-on-click="() =&gt; this.setActiveView(option.id)" t-out="option.label" />
            </div>
            <TimelineFilters />
            <SnapshotFilters />
        </div>
    </t>
</templates>
