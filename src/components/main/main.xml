<templates>
    <t t-name="Main">
        <div id="main" class="rtc-log-viewer">
            <UploadPanel t-if="!this.log.isLoaded()" />
            <div t-if="this.log.isLoaded()" class="log-content">
                <div class="info-panel">
                    <SystemInfoPanel />
                    <ViewControls activeView="this.activeView" />
                </div>
                <MainView activeView="this.activeView" />
            </div>
            <footer class="app-footer">
                <p>Powered by <a href="https://github.com/odoo/owl" target="_blank">odoo/OWL3</a>
                </p>
                <p>Source code on <a href="https://github.com/ThanhDodeurOdoo/rtc-log-viewer" target="_blank">GitHub</a>
                </p>
            </footer>
        </div>
    </t>
</templates>
